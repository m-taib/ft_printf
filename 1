#include "ft_printf.h"

void	ft_percentage(t_list *pt,int *cn)
{
	if (pt->width)
	{
		if (pt->wd > 1)
		{
			if (pt->zero)
				handle_zero_spaces(pt->wd, 1, '0', cn);
			else
				handle_zero_spaces(pt->wd, 1, ' ', cn);
		}
		ft_putchar('%',cn);
	}
	if (pt->minus)
	{
		ft_putchar('%',cn);
		if (pt->wd > 1)
			handle_zero_spaces(pt->wd, 1, ' ', cn);
	}
	/*if (pt->zero)
	{
	}*/

}
int	main()
{
	//ft_printf("%05%||\n");
	printf("%-05%");
	//ft_printf("%-5%")
	//ft_printf("%-05%")
	//ft_printf("percent 2 %12%")
	//ft_printf("percent 3 %-12%")
	//printf("%.10%");
}
